<Window x:Class="BookingApp.View.GuideViewMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingApp.View"
        xmlns:components="clr-namespace:BookingApp.View.GuideView.Components"
  
         mc:Ignorable="d"
        Title="Guide" WindowState="Maximized" d:DesignHeight="1080" d:DesignWidth="1920" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.15*"/>
            <ColumnDefinition Width="0.8*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="0"  Fill="LightGray" />
        <Frame Grid.Column="1" x:Name="MainFrame" NavigationUIVisibility="Hidden" />
        <StackPanel VerticalAlignment="Center" Grid.Column="0">
            <Button BorderThickness="0" Click="LiveToursPageClick" Margin="0 0 0 5" >
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Images/live.png" Width="20" Height="25"/>
                    <TextBlock Text="Live Tours" FontSize="14" VerticalAlignment="Center" Margin="5,0,0,0" />
                </StackPanel>
            </Button>
            <Button BorderThickness="0"  Click="ShowCreateTourForm">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Images/add.png" Width="20" Height="25"/>
                    <TextBlock Text="New Tour" FontSize="14" VerticalAlignment="Center" Margin="5,0,0,0" />
                </StackPanel>
            </Button>
            <Separator/>
            <Button BorderThickness="0" >
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Images/view.png" Width="20" Height="25"/>
                    <TextBlock Text="Details" FontSize="14" VerticalAlignment="Center" Margin="5,0,0,0" />
                </StackPanel>
            </Button>
            <Separator/>
            <Button BorderThickness="0" Click="TourStatisticsPageClick" >
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Images/checkpoint.png" Width="20" Height="25"/>
                    <TextBlock x:Name="DeleteTxtBlock" Text="Statistics" FontSize="14" VerticalAlignment="Center" Margin="5,0,0,0" />
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
